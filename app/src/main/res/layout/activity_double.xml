<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/doubleLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoubleActivity"
    android:background="@drawable/cardbackgrimage"
    >

    <ImageView
        android:id="@+id/iv_card1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="51dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="18dp"
        android:scaleType="centerInside"
        android:src="@drawable/card_back"
        app:layout_constraintEnd_toStartOf="@+id/iv_card2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_card2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="60dp"
        android:scaleType="centerInside"
        android:src="@drawable/card_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_card1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b_deal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:text="Deal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_card2" />

    <TextView
        android:id="@+id/tv_player1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:gravity="center"
        android:text="Player 1: 0"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_player2"
        app:layout_constraintEnd_toStartOf="@+id/tv_player2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_player2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Player 2: 0"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_player1" />


    <TextView
        android:id="@+id/tv_war"
        android:layout_width="282dp"
        android:layout_height="112dp"
        android:layout_marginStart="108dp"
        android:layout_marginEnd="108dp"
        android:text="--LIKA--"
        android:textSize="72sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_card1" />

    <Button
        android:id="@+id/backMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="163dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="160dp"
        android:text="BACK"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_deal" />


</androidx.constraintlayout.widget.ConstraintLayout>